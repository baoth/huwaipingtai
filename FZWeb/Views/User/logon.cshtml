@{
    Layout = null;
}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0" />
        <meta name="apple-mobile-web-app-capable" content="yes" />
        <meta name="apple-mobile-web-app-status-bar-style" content="black" />
        <link href="../../Content/Header.css" rel="stylesheet" type="text/css" />

        <script src="../../Scripts/qsm-mui/zepto-1.1.4.min.js" type="text/javascript"></script>
        <script src="../../Scripts/qsm-mui/fx.js" type="text/javascript"></script>
        <script src="../../Scripts/qsm-mui/zepto.selector.js" type="text/javascript"></script>
        <script src="../../Scripts/qsm-mui/zepto.touch.js" type="text/javascript"></script>
        <script type="text/javascript">
            $(document).ready(function () {
                //非空验证
                $('#frm_logon').bind('submit', function (e) {
                    if (!(checkUsername() && checkPassword())) {
                        e.preventDefault();
                    }
                });
                $('.s-ck').on($.clickAction, function () {
                    if ($(this).hasClass('on')) {
                        $(this).removeClass('on');
                        $('#avoidlogon').val("0");
                    }
                    else {
                        $(this).addClass('on');
                        $('#avoidlogon').val("1");
                    }
                });
                $('#loginsub').on($.clickAction, function () {
                    $('#frm_logon').submit();
                });
                $('#username').on('focus', function () {

                    $("#error").hide();
                    $("#err").hide();
                });

                $('#password').on('focus', function () {
                    $("#error").hide();
                    $("#err").hide();
                });
            });
            function checkUsername() {
                var username = $("#username").val().trim();
                if (username == "") {
                    if (true) {
                        $("#err").html("\u8d26\u6237\u540d\u4e0d\u80fd\u4e3a\u7a7a");
                        $("#err").show();
                    } else {
                        $("#error").html("\u8d26\u6237\u540d\u4e0d\u80fd\u4e3a\u7a7a");
                        $("#error").show();
                    }
                    return false;
                }
                return true;
            }

            function checkPassword() {
                var password = $("#password").val().trim();
                if (password == "") {
                    if (true) {
                        $("#err").html("\u5bc6\u7801\u4e0d\u80fd\u4e3a\u7a7a");
                        $("#err").show();
                    } else {
                        $("#error").html("\u5bc6\u7801\u4e0d\u80fd\u4e3a\u7a7a");
                        $("#error").show();
                    }
                    return false;
                }
                return true;
            }

            
	
        </script>
        <style type="text/css"> 
           .new-ct 
            {
                min-height: 400px;
                background-color: #fafafa;
            }
            .logon-ct
            {
                padding: 20px 10px;
            }
            .new-ct input
            {
            	font-size: 16px;
                line-height: 1.25em;
            }
            .txt-err
            {
                display: block;
                font-size: 14px;
                color: #e4393c;
            }
            .logon-s
            {
            	border: 1px solid #ccc;
            	display: block;
            	margin-bottom: 15px;
            	height: 40px;
                border-top: 1px solid #9f9f9f;
                background: #fff;
            }
            .logon-input
            {
            	width: 100%;
                height: 40px;
                border: 0;
                border-radius: 0;
                background: #fff;
                font-size: 12px;
                line-height: 24px;
                font-weight: normal;
                color: #bdbdbd;
                text-indent: 10px;
                vertical-align: top;
                -webkit-appearance: none;
            }
            .a-txt
            {
            	display: block;
                padding-top: 10px;
                font-size: 14px;
                line-height: 20px;
                color: #666;
                text-decoration:none;
            }
            .s-ck.on
            {
            	
                background: url(../Content/images/icon_chk.png) 0 0 no-repeat;
                background-size: 18px 18px;
                
            }
            .s-ck
            {
            	display: inline-block;
                width: 18px;
                height: 18px;
                margin-right: 5px;
            	background: url(../Content/images/icon_chk2.png) 0 0 no-repeat;
                background-size: 18px 18px;
                vertical-align: middle;
            }
            .login-register 
            {
                padding: 10px;
            }
            .logon-tbl
            {
                display: table;
                width: 100%;
            }
            .logon-tbl-cell
            {
            	display: table-cell;
            	vertical-align: top;
            	padding: 3px 0;
            }
            .login-register a 
            {
                font-size: 14px;
                color: #333;
                text-decoration: underline;
            }
            .n-reg
            {
            	float: left;
            }
            .n-fb
            {
            	float: right;
            }
            .mgn 
            {
                margin: 15px 10px;
            }
            .new-abtn-type
            {
                display: block;
                padding: 8px;
                border-radius: 2px;
                background-color: #c00;
                font-size: 14px;
                color: #fff;
                text-align: center;
            }
            
            
            
            
            
            .i-footer 
            {
                margin-top: 20px;
                background-color: #f3f2f2;
                font-size: 14px;
                color: #6e6e6e;
                text-align: center;
            }
            .i-footer .i-f-login 
            {
                /*position: relative;*/
                padding: 0 12px;
                background-color: #a8a8a8;
                line-height: 27px;
                color: #fff;
                text-align: left;
                heigth: 27px;
            }
            .i-footer .i-f-login a 
            {
                color: #fff;
            }
            .i-footer .i-f-login .i-bar2 
            {
                margin: 0 5px;
            }
            .i-footer .i-f-login .i-back-top 
            {
                position: absolute;
                right: 12px;
            }
            .i-footer .i-f-section, .i-footer .i-f-section2 
            {
                padding: 10px 0;
            }
            .i-footer .i-f-section a:first-child 
            {
                margin-left: 0;
            }
            .i-footer .i-f-section a 
            {
                margin-left: 20px;
                color: #6e6e6e;
            }
            .i-footer .i-f-section .on 
            {
                color: #c30202;
            }
        </style>
    </head>
    <body>
        @Html.Partial("_HeaderTypical", new ViewDataDictionary { { "title", "登陆" } })
        <div class='new-ct logon'>
            <div class='logon-ct'>
                <div class='logon-info'>
                    <form action="/User/DoLogon" method="post" id="frm_logon">
    			        <input type="hidden" name="avoidlogon" id='avoidlogon' value="0">
                        
    			        <div class="txt-err" id="err" style="display:none;"></div> 
    			        <span class="logon-s">
                            <input type="text" value="" class="logon-input" name="username" id="username" placeholder="请输入用户名/邮箱/已验证手机">
                        </span>
                        <span class="logon-s">
                            <input type="password" value="" class="logon-input" name="password" id="password" placeholder="请输入密码">
                        </span>
				        <a class="a-txt" href="javascript:void(0);">
                            <span class="s-ck"></span>
    				        一个月内免登录
				        </a>
                		<a href="javascript:void(0);" id="loginsub" class="new-abtn-type mgn">登录</a>
    		         </form>
                     <div class="login-register">
                        <div class="logon-tbl">
                            <span class="logon-tbl-cell">
                                <a rel="nofollow" href="/RegUser/Index" class="n-reg">免费注册</a>
                        	</span>
                            <span class="logon-tbl-cell text-r">
                                <a href="javascript:void(0);" class="n-fb"> 找回密码</a>  
						    </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @Html.Partial("_FooterTypical")
    </body>

</html>
