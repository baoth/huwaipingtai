@{
    Layout = null;
}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0" />
        <meta name="apple-mobile-web-app-capable" content="yes" />
        <meta name="apple-mobile-web-app-status-bar-style" content="black" />
        <link href="../../Content/Header.css" rel="stylesheet" type="text/css" />

        <script src="../../Scripts/JsExtend.js" type="text/javascript"></script>
        <script src="../../Scripts/qsm-mui/iscroll.js" type="text/javascript"></script>
        <script src="../../Scripts/qsm-mui/zepto-1.1.4.min.js" type="text/javascript"></script>
        <script src="../../Scripts/qsm-mui/fx.js" type="text/javascript"></script>
        <script src="../../Scripts/qsm-mui/zepto.selector.js" type="text/javascript"></script>
        <script src="../../Scripts/qsm-mui/zepto.touch.js" type="text/javascript"></script>
        <link href="../../Content/Header.css" rel="stylesheet" type="text/css" />
         <style>
        #wrapper 
        {	       
	        z-index: 1;
	        top: 90px;
	        bottom:0;
	        left: 0;
	        width: 100%;
	        background: #fff;
	        overflow: hidden;
        }
        #scroller 
        {
	        position: absolute;
	        z-index: 100;
	        -webkit-tap-highlight-color: rgba(0,0,0,0);
	        width: 100%;
	        -webkit-transform: translateZ(0);
	        -moz-transform: translateZ(0);
	        -ms-transform: translateZ(0);
	        -o-transform: translateZ(0);
	        transform: translateZ(0);
	        -webkit-touch-callout: none;
	        -webkit-user-select: none;
	        -moz-user-select: none;
	        -ms-user-select: none;
	        user-select: none;
	        -webkit-text-size-adjust: none;
	        -moz-text-size-adjust: none;
	        -ms-text-size-adjust: none;
	        -o-text-size-adjust: none;
	        text-size-adjust: none;
        }
       * {
        margin: 0;
        padding: 0;
        }
        ul, ol {
            list-style: none;
        }
        body, p, h1, h2, h3, h4, h5, h6, ul, ol, li, dl, dt, dd, table, th, td, form, fieldset, legend, input, textarea, button, select {
            margin: 0;
            padding: 0;
        }
        .p-sort {
            background: #fff; 
        }
        .radius {
            border-radius: 5px;
            -webkit-border-radius: 5px;
            -moz-border-radius: 5px;
        }
        .p-sort .mc a {
         color: #67738A;
        }
        a {
            color: #000;
            text-decoration: none;
        }
        .list .mc li.first {
        border-top: none;
        }
        .list .mc li {
        position: relative;
        border-bottom: #dbd7d2 1px solid;      
        padding: 15px 0 15px 6px;
        }
        body, input, textarea, select, button, table {
            font-size: 16px;
            line-height: 1.25em;
        }
        .p-sort .mc strong.name1 {
            font-size: .875em;
            color: #404040;
            font-weight: normal;
            margin-left: 10px;
        }
        .menu-botton-arrow {
            display: block;
            position: absolute;
            right: 6px;
            top: 0;
            width: 10px;
            height: 100%;
            background: url(../../Content/images/arrow.png) center right no-repeat;
        }
    </style>
        <script type="text/javascript">
            var myScroll;
            $(document).ready(function () {
                SetScroll();
                LoadData();
            });

            var SetScroll = function () {
                $("#wrapper").css('top', $("header").height());
                myScroll = new IScroll('#wrapper', { mouseWheel: true });
                document.addEventListener('touchmove', function (e) { e.preventDefault(); }, false);
            }
            
            var LoadData = function () {
                $.ajax({
                    url: "/Shelves/GetBrandList",
                    data: {},
                    type: "POST",
                    dataType: "JSON",
                    success: function (d) {
                        
                        if (d) {
                            var divs = CreateHtmlData(d);
                            $("#ulContent").html("");
                            $("#ulContent").html(divs);
                        }
                        else {
                            alert("返回数据失败！");
                        }
                    },
                    error: function (s) {
                        alert("请求数据失败！");
                    }
                });
            };
            var CreateHtmlData = function (data) {
                var obj = eval('(' + data + ')');
                var divStr = "";
                for (var i = 0, j = obj.length; i < j; i++) {
                    divStr += GetHtml(obj[i]);
                }
                return divStr;
            }

            var GetHtml = function (obj) {
                var name = obj["Name"] == null ? "" : obj["Name"];
                var id = obj["Id"];
                var divs = ' <a href="/Shelves/ProductList?pinpaiid={0}">'
			               +'    <li class="first">'
				           +'        <input type="hidden" class="str1" value="{1}">'
				           +'        <strong class="name1">{1}</strong>'
				           +'        <span class="menu-botton-arrow"></span>'
			               +'    </li>'
		                   + '</a> ';
                return divs.format(id, name);
            };

        </script>
    </head>
    <body>
        @Html.Partial("_HeaderTypical", new ViewDataDictionary { { "title", "商品品牌" } })
        <div id="wrapper">
	        <div id="" class="list p-sort radius">
                <div class="mc">
                   <ul id="ulContent">
		               
		            </ul>
              </div>
            </div>
        </div>
    </body>
   
</html>
