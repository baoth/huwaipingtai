        <!--日期控件-->
        <div class='i-datetimer' id="i-timer">
            <div class="new-ct" style="height:100%;">
	            <div class="title">
        	        <span class="i-tbl-type">
            	        <span class="tbl-cell" style="width:25%">时间段</span>
    			        <span class="tbl-cell" style="width:25%" id='timesect1'>9:00-15:00</span>
    			        <span class="tbl-cell" style="width:25%" id='timesect2'>15:00-19:00</span>
    			        <span class="tbl-cell" style="width:25%" id='timesect3'>19:00-22:00</span>
    			    </span>
                </div>
            </div>
        </div>
        <style type="text/css">
            .i-datetimer
            {
            	display: none; 
            	width: 100%; 
            	height: auto; 
            	position: absolute; 
            	top: 44px; 
            	z-index: 9999; 
            	left: 0%;
            }
            .i-tbl-type 
            {
                display: table;
                width: 100%;
            }
            .title .tbl-cell:first-child 
            {
                font-size: 14px;
                color: #333;
            }
            .title .tbl-cell 
            {
                font-size: 12px;
                color: #666;
                text-align: center;
            }
            .i-info-dv .tbl-cell 
            {
                font-size: 12px;
                color: #4d4c4c;
                text-align: center;
                vertical-align: middle;
            }
            .tbl-cell 
            {
                display: table-cell;
            }
            .i-info-dv
            {
            	border-bottom: 1px solid #c8c7cc;
            	padding: 0;
            }
            .i-send-time
            {
            	display: block;
                padding: 9px 10px 6px;
                color: #000;
                text-decoration: none;
            }
            .i-info-dv .i-send-time.on .icon 
            {
                width: 25px;
                height: 24px;
                background-position: 2px -56px;
            }
            .i-info-dv .i-send-time .icon 
            {
                display: inline-block;
                width: 40px;
                height: 24px;
                background: url(../Content/images/icon_order.png) -56px -75px no-repeat;
                background-size: 100px 100px;
                vertical-align: top;
            }
        </style>
        <script type="text/javascript">
            $(document).ready(function () {
                $('.i-a-back').on($.clickAction, function () {
                    window.location = window.sessionStorage.backurl;
                });
                $('.i-a-bh').on($.clickAction, function () {
                    var tg = $('.i-bh-tab');
                    if (tg.hasClass('on')) {
                        tg.removeClass('on');
                    }
                    else {
                        tg.addClass('on');
                    }
                });
                
                $('#itbackground').on($.clickAction, triggerDateTime);
                $('.chooseTime').on($.clickAction, chooseTime);
                $('.choosePhone').on($.clickAction, choosePhone);
                initCourier();
                createDateTimer();
            });
            function initCourier() {
                if (window.sessionStorage.courierDate == undefined || window.sessionStorage.courierDate == '') {
                    window.sessionStorage.courierDate = new Date().DateAdd('d', 1).Format('YYYY-M-D');
                }
                var defaultDate = new Date().StringToDate(window.sessionStorage.courierDate);
                if (window.sessionStorage.courierTimeSect == undefined || window.sessionStorage.courierTimeSect == '') {
                    window.sessionStorage.courierTimeSect = $('#timesect1').text();
                }
                var defaultTimeSect = window.sessionStorage.courierTimeSect;
                
                $('#i-sendTime').html(defaultDate.Format('YYYY-M-D (周W) ') + defaultTimeSect);
                $('#i-sendTime').data('date', defaultDate.Format('YYYY-M-D')).data('tsect', defaultTimeSect);
                var TimeIndex=window.sessionStorage.courierTimeType || 1;
                $('#Time' + TimeIndex).parent().trigger($.clickAction);
                var PhoneIndex = window.sessionStorage.courierPoneType || 1;
                $('#Phone' + PhoneIndex).parent().trigger($.clickAction);
            };
            function createDateTimer() {
                var defaultDateStr = window.sessionStorage.courierDate;
                var defaultTimeSect = window.sessionStorage.courierTimeSect;
                var sect = new Array();
                sect['9:00-15:00'] = 1;
                sect['15:00-19:00'] = 2;
                sect['19:00-22:00'] = 3;
                var ct = $('#i-timer .new-ct');
                $('#i-timer .new-ct .i-info-dv').remove();
                $('#i-timer .new-ct .new-abtn-type').remove();
                var myDate = new Date();
                var section = '';
                
                for (var i = 1; i <= 7; i++) {
                    var cdate = myDate.DateAdd('d', i);
                    var cdatestr = cdate.Format('YYYY-M-D');
                    
                    section += "<div class='i-info-dv'><span class='i-tbl-type'>";
                    section += "<span class='tbl-cell info' style='width:25%' data-date='" + cdatestr +
                               "' data-week='" + cdate.Format('周W') + "'>" + cdate.Format('M-D 周W') + "</span>";
                    section += "<span class='tbl-cell' style='width:25%'>" +
                               "<a id='t" + cdatestr + "1' href='javascript:void(0)' name='hours' class='i-send-time' data-time='timesect1'><span class='icon'></span></a>" +
                               "</span>";
                    section += "<span class='tbl-cell' style='width:25%'>" +
                               "<a id='t" + cdatestr + "2' href='javascript:void(0)' name='hours' class='i-send-time' data-time='timesect2'><span class='icon'></span></a>" +
                               "</span>";
                    section += "<span class='tbl-cell' style='width:25%'>" +
                               "<a id='t" + cdatestr + "3' href='javascript:void(0)' name='hours' class='i-send-time' data-time='timesect3'><span class='icon'></span></a>" +
                               "</span>";
                    section += "</span></div>";
                }
                ct.append(section);
                ct.append("<a href='javascript:triggerDateTime()' class='new-abtn-type mgn'>确认</a>");
                $('#t' + defaultDateStr + sect[defaultTimeSect]).addClass('on');
                $('.i-send-time').on($.clickAction, selectTime);
            };
            function submitForm() {
                window.sessionStorage.courierDate = $('#i-sendTime').data('date');
                window.sessionStorage.courierTimeSect = $('#i-sendTime').data('tsect');
                window.sessionStorage.courierTimeType = $('#idTime').val();
                window.sessionStorage.courierPoneType = $('#idPhone').val();
                window.location = window.sessionStorage.backurl;
            };
            function selectTime() {
                
                $('.i-send-time').removeClass('on');
                $(this).addClass('on');

                var time = $('#' + $(this).data('time')).text();
                
                var infoobj = $(this).parent().siblings('.info');
                var date = infoobj.data('date');
                var week = infoobj.data('week');
                $('#i-sendTime').html(date + ' (' + week + ') ' + time);
                $('#i-sendTime').data('date', date).data('tsect',time);
            };
            function triggerDateTime() {
                var obj = $('#i-timer');
                if (obj.css('display') == "none") {
                    $("#itbackground").height($("body").height());
                    $("#itbackground").show();
                    obj.show();
                } else {
                    $("#itbackground").hide();
                    obj.hide();
                }
            };
            function chooseTime() {
                var index = $(this).data('index');
                $("#idTime").val(index);
                $("[name='ptlistTime']").removeClass("on");
                $('#Time' + index).addClass("on");
            };
            function choosePhone() {
                var index = $(this).data('index');
                $("#idPhone").val(index);
                $("[name='ptlistPhone']").removeClass("on");
                $('#Phone' + index).addClass("on");
            };
        </script>
    </body>

</html>
