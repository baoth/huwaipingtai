                }
             
            }
        }
        var ClearData = function () {
            $("#txt_id").val("");
            $("#txt_code").val("");
            $("#txt_Level").val("");
            $("#txt_name").val("");
            $("#txt_pcode").val("");
            $("#txt_isstop").removeAttr("checked");
        }
        var BindEvent = function () {

            $("#btn_add").bind("click", function () {
                $("#txt_code").removeAttr("disabled");
                ClearData();
                setState(1);
            });
            $("#btn_update").bind("click", function () {
