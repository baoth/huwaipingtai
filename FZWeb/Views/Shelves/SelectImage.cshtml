        <script type="text/javascript">
            $(document).ready(function () {               
                LoadData();
                BindEvent();

            });

            var BindEvent = function () {
                $("#btn_save").bind("click", function () {
                    var url = "/Shelves/SaveShangJia_Sku_TuTou";
                    var dataRow = [];
                    var sku = $("#txt_sku").val();
                    $("#RowContent a").each(function () {
                        var aObj = $(this)
                        var checked = aObj.attr("checked");
                        if (checked == "1") {
                            var row = {};
                            row.ShangJia_ShangPin_TuCeId = aObj.attr("tuceid");
                            row.ImgName = $(aObj.find("img")).attr("v");
                            row.ImgKey = sku.substring(0, sku.lastIndexOf('-')); //截取 sku
                            dataRow.push(row);
                        }

                    })
                    
                    var dataJson = JSON.stringify(dataRow);
                    var para = { data: dataJson };
                    SaveAjax(url, para);
                });
            }
            var LoadData = function () {
                var url = "/Shelves/GetProductPhotoList";
                var sku = $("#txt_sku").val();
                sku = sku.substring(0, sku.lastIndexOf('-'));
                var shangpinid = $("#txt_shangpinid").val();
                var ShangJia_ShangPin_TuCeId = $("#");
                var para = { Sku: sku, ShangPinId: shangpinid };
                submitAjax(url, para);
            }

            var getHtml = function (data) {
                var id = data["Id"];
                var imgName = data["ImgName"];
                var ishasImg = data["ImgKey"]; //判断是否选择图片标示
                var checked = ishasImg == null ? 0 : 1;
                var className = checked == 1 ? "span-checkbox checked" : "";
                var sku = $("#txt_sku").val();
                var rootPath = $("#txt_imgPth").val();
                var imgFullPath = "../.." + rootPath + "/" + sku + "/" + imgName;
                var shangJia_ShangPin_TuCeId = data["ShangJia_ShangPin_TuCeId"];
                var divs = '<div class="module">'
                         + '     <a href="#" onclick="changeSelected(this)" tuceid={5} checked={1} >'
                         + '         <p class="img">'
                         + '             <img class="imageLoad" v={4} src="{2}">'
                         + '             <span id="checkIcon{0}" class="{3}"></span>'
                         + '         </p>'
                         + '         <p class="g-title"> </p>'
                         + '     </a>'
                         + '</div>';
                var divHtml = divs.format(id, checked, imgFullPath, className, imgName,shangJia_ShangPin_TuCeId);
                return divHtml;
            }

            var submitAjax = function (url, para) {
                $.ajax({
                    url: url,
                    data: para,
                    type: "POST",
                    dataType: "json",
                    success: function (data) {
                        
                        var lis = "";
                        if (data && data.length > 0) {
                            for (var i = 0, j = data.length; i < j; i++) {
                                lis += getHtml(data[i]);
                            }
                        }

                        var objul = $("#RowContent");
                        if (lis) {
                            objul.html("");
                            objul.html(lis);                                              
                        }
                        else {
                            objul.html("");
                        }
                        var count = CountSelectImg();
                        $("#selectCount").html("<font color='red'>已择" + count + "张</font>"); 
                       
                    },
                    error: function () {
                        alert("请求错误！");
                    }

                });
            }

            function changeSelected(e) {
                
                var count = CountSelectImg();
                var obj = $(e).find("span");
                if (obj.hasClass("checked")) {
                    obj.removeAttr("class");
                    $(e).removeAttr("checked");
                    count--;
                    $("#selectCount").html("<font color='red'>已择" + count + "张</font>");       
                }
                else {                   
                    if (count >= 5) {
                        alert("最多选择5个！");
                        return;
                    }

                    obj.addClass("span-checkbox checked");
                    $(e).attr("checked", 1);
                    count++;
                    $("#selectCount").html("<font color='red'>已择" + count + "张</font>");          
                }               
            }

            var CountSelectImg = function () {
                
                var count = 0;
                $("#RowContent .module a").each(function (e) {
                    var checked = $(this).attr("checked")
                    if (checked == "1") {
                        count++;
                    }
                })
                return count;
            }

            var SaveAjax = function (url, para) {
                $.ajax({
                    url: url,
                    data: para,
                    type: "POST",
                    dataType: "json",
                    success: function (data) {
                        
                        if (data) {
                           
                            if (data.IsSuccess) {
                                LoadData();
                                alert("保存成功！");
                            }
                            else {
                                alert("保存失败！");
                            }
                        }
                        else {
                            alert("保存失败！");
                        }
                    },
                    error: function () {
                        alert("请求错误！");
                    }

                });
            }
           
        </script>

       
