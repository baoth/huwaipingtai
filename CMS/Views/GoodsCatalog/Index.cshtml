@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
    <link href="../../Scripts/jquery-easyui-1.3.4/themes/default/easyui.css" rel="stylesheet"
        type="text/css" />
    <link href="../../Scripts/jquery-easyui-1.3.4/themes/icon.css" rel="stylesheet" type="text/css" />
    
    <script src="../../Scripts/jquery-easyui-1.3.4/locale/easyui-lang-zh_CN.js" type="text/javascript"></script>
    <script src="../../Scripts/jquery-easyui-1.3.4/jquery.min.js" type="text/javascript"></script>
    <script src="../../Scripts/jquery-easyui-1.3.4/jquery.easyui.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            InitData();
        });
       
        var InitData = function () {
            $('#GoodsCatalogTree').tree({
                url: 'GetTree'                
            });  

        }
    </script>
    <style type="text/css">
        table
        {
             width:100%;    
        }
        .tdText
        {
             width:20%;
             height:30px;
             text-align:right;
        }
        .tdValue
        {
            width:30%;
            height:30px;   
            text-align:left; 
        }
    </style>
</head>
<body>
    <div id="cc" class="easyui-layout" style="width:1000px;height:600px;"> 
    <div data-options="region:'west',title:'分类目录',split:true" style="width:200px;">
        <ul id="GoodsCatalogTree">        
        </ul>
    </div>  
    <div data-options="region:'center',title:'明细'" style="padding:5px;background:#eee;">
        <div id="tbRole" style="padding:0px;height:auto">  
            <div style="margin:2px; border:1px solid #95B8E7; height:30px">  
                <div style="float: left;">  
                     
                    <a href="#" class="easyui-linkbutton" iconCls="icon-add" plain="true" title="添加">添加</a>
                     
                    <a href="#" class="easyui-linkbutton" iconCls="icon-edit" plain="true" title="修改">修改</a>  

                    <a href="#" class="easyui-linkbutton" iconCls="icon-save" plain="true" title="保存">保存</a> 
                     
                </div>  
               
                
            </div>  
        </div> 
            
        <div style=" margin-top:50px">
            <table>
               <tr>
                    <td class="tdText">分类编码:</td>
                    <td class="tdValue">
                     <input id="txt_code" class="easyui-validatebox" data-options="" />  
                    </td>
                    <td class="tdText">分类层级:</td>
                    <td class="tdValue">
                     <input id="txt_Level" class="easyui-validatebox" data-options="" />  
                    </td>
               </tr>
               <tr>
                    <td class="tdText">分类名称:</td>
                    <td class="tdValue">
                     <input id="txt_name" class="easyui-validatebox" data-options="" />  
                    </td>
                    <td class="tdText">父级分类:</td>
                    <td class="tdValue">
                     <input id="txt_pcode" class="easyui-validatebox" data-options="" />  
                    </td>
               </tr>
               <tr>
                    <td class="tdText">是否启用:</td>
                    <td class="tdValue">
                     <input id="txt_isstop" class="easyui-validatebox" data-options="" />  
                    </td>
                    <td></td>
                    <td>
                    
                    </td>
               </tr>
            </table>
        </div> 
    </div>  
    <div  style="display:none">
        <input type="hidden" id="pageState" value="1" />
    </div>
    </div>  

</body>
</html>
