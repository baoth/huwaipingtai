        <style type="text/css">
            * {
                margin: 0;
                padding: 0;
            }
            body, p, h1, h2, h3, h4, h5, h6, ul, ol, li, dl, dt, dd, table, th, td, form, fieldset, legend, input, textarea, button, select {
                margin: 0;
                padding: 0;
            }
            .new-ct {
                min-height: 300px;
                background-color: #fff;
            }
            .size-add {
                padding: 20px 10px;
                border-bottom: 1px solid #c8c7cc;
            }
            .btn-size {
                display: block;
                height: 34px;
                border: 1px solid #e4393c;
                line-height: 34px;
                color: #e4393c;
                text-align: center;
            }
            .size-info {
                padding-top: 20px;
                background: #f1f1f5;
            }
            .size-border {
                padding: 10px;
                border-top: 1px solid #c8c7cc;
                border-bottom: 1px solid #c8c7cc;
                background: #fff;
            }
            .pd-tb10 {
                 padding-bottom: 10px;
            }
            .size-border p:first-child {
                color: #333;
            }
            .size-border p:last-child {
                font-size: 14px;
                color: #666;
            }
            .text-f14-c6 {
                font-size: 14px;
                color: #666;
            }
            .bg-border3 {
                display: block;
                height: 2px;
                background: url(../../Content/images/bg_line3.png) 0 0 repeat-x;
                background-size: 6px 1px;
            }
            .size-btn {
                padding: 5px 0 0;
            }
            .tbl-type {
                display: table;
                width: 100%;
            }
            .tbl-cell {
                display: table-cell;
            }
            .size-info .btn-chk, .size-info .btn-update, .size-info .btn-del {
                display: inline-block;
                height: 25px;
                line-height: 25px;
                font-size: 14px;
                color: #666;
            }
            a {
                color: #000;
                text-decoration: none;
            }
            .size-info .btn-chk span, .size-info .btn-update span, .size-info .btn-del span {
                display: inline-block;
                width: 25px;
                height: 25px;
                margin-right: 10px;
                background: url(../../Content/images/icon_order.png) -28px -54px no-repeat;
                background-size: 100px 100px;
                vertical-align: top;
            }
            .text-right {
                 text-align: right;
            }
            .size-info .btn-update span {
                background-position: -50px 0;
            }
            .size-info .btn-del span {
                background-position: -76px 0;
            }
        </style>
        <script type="text/javascript">
            $(document).ready(function () {
                LoadData();
            });
            var LoadData = function () {
                $.ajax({
                    url: "GetYanSeList",
                    data: {},
                    type: "POST",
                    dataType: "JSON",
                    success: function (d) {
                        if (d) {
                            var divs = CreateHtmlData(d);
                            $("#content").html("");
                            $("#content").html(divs);
                        }
                        else {
                            alert("返回数据失败！");
                        }
                    },
                    error: function (s) {
                        alert("请求数据失败！");
                    }
                });
            };
            var CreateHtmlData = function (data) {
                var obj = eval('(' + data + ')');
                var divStr = "";
                for (var i = 0, j = obj.length; i < j; i++) {
                    divStr += GetHtml(obj[i]);
                }
                return divStr;
            }

            var GetHtml = function (obj) {
                var size = obj["Name"] == null ? "" : obj["Name"];
                var id = obj["Id"];
                var divs = '<div class="size-info">'
                            + '<div class="size-border">'
                            + '        <div class="bg-border3"></div>'
                            + '        <div class="size-btn">'
                            + '            <span class="tbl-type">'
                            + '                <span class="tbl-cell" onclick="selectSize({0})">'
                            + '                    <a href="javascript:void(0)" name="selSpan" id="selSpan{0}" style="width:100%"><span></span>{1}</a>'
                            + '                </span>'
                            + '                <span class="tbl-cell text-right">'
                            + '                    <a href="editYanSe?type=2&id={0}" class="btn-update"><span></span>修改</a>'
    					    + '               <a href="javascript:confirmDel({0})" class="btn-del"><span></span>删除</a>'
    					    + '                </span>'
                            + '            </span>'
                            + '        </div>'
                            + '   </div>'
                            + ' </div>   ';
                return divs.format(id,size);
            };

            function confirmDel(id) {
                if (confirm("确定删除吗")) {
                    $.ajax({
                        url: "Save",
                        data: { data: "{'Id':" + id + "}", type: 3 },//3修改
                        type: "POST",
                        dataType: "JSON",
                        success: function (d) {
                            if (d) {
                                LoadData();
                            }
                            else {
                                alert("返回数据失败！");
                            }
                        },
                        error: function (s) {
                            alert("请求数据失败！");
                        }
                    });
                }
            }
        </script>
    </head>
    <body>
        @Html.Partial("_HeaderTypical", new ViewDataDictionary { { "title", "商品颜色" } })
       <slidercontent>
