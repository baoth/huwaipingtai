@{
    ViewBag.Title = "WaitDeliveryOrderList";
}

<!DOCTYPE>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0" />
        <meta name="apple-mobile-web-app-capable" content="yes" />
        <meta name="apple-mobile-web-app-status-bar-style" content="black" />
        <link href="../../Content/Header.css" rel="stylesheet" type="text/css" />
        <link href="../../Content/orderNoPay.css" rel="stylesheet" type="text/css" />
              <script src="../../Scripts/qsm-mui/zepto-1.1.4.min.js" type="text/javascript"></script>
        <script src="../../Scripts/qsm-mui/fx.js" type="text/javascript"></script>
        <script src="../../Scripts/qsm-mui/zepto.selector.js" type="text/javascript"></script>
        <script src="../../Scripts/qsm-mui/zepto.touch.js" type="text/javascript"></script>
          <style type="text/css">
            .bg-skape
            {
	            height: 15px;
	            background: #f1f1f5;
            }
        </style>
    </head>

<body>
 @Html.Partial("_HeaderTypical", new ViewDataDictionary { { "title", "待收货订单" } })
<div class="new-ct">
    <div class="new-order">
    <ul class="order-list" id="ulContent"> 
   
        @{
            var orders = @ViewData["Orders"] as List<DataModel.Order.OrderGoodsDto>;
            var s = @ViewData["outLine"];
            foreach (var item in orders)
            {

                var dt = @item.ExpressDateTime;
                  <li>   
                 <div class="order-box">
                    <div class="order-msg">            
                            <img src=" @ViewData["Path"]@item.ShangPinId/@item.ImgName">            
                            <div class="order-msg">	            
                                <p class="title">订单号:<span style="color:green">@item.Id</span></p>	
                                <p class="title">已由<span style="color:blue"> @item.ExpressCompany </span>于 @string.Format("{0}年{1}月{2}日 {3}点{4}分", dt.Year,dt.Month,dt.Day,dt.Hour,dt.Minute) 发货</p>
                                <p class="title">快递单号:<span style="color:blue"> @item.ExpressNum</span></p>	            
                                <p class="price">¥@item.Price<span style="display:none;"></span></p>	            
                                <p class="order-data" style="display:none;">@item.CreateDate</p>            
                            </div>           
                    </div>  
                 </div>
                 </li>  
            }
        }
    
     
</ul>
	</div>
</div>
 @Html.Partial("_FooterTypical")
</body>

