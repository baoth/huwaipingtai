        <style type="text/css">
            * {
                margin: 0;
                padding: 0;
            }
            body, p, h1, h2, h3, h4, h5, h6, ul, ol, li, dl, dt, dd, table, th, td, form, fieldset, legend, input, textarea, button, select {
                margin: 0;
                padding: 0;
            }
            .new-ct {
                min-height: 300px;
                background-color: #fff;
            }
            .size-add {
                padding: 20px 10px;
                border-bottom: 1px solid #c8c7cc;
            }
            .btn-size {
                display: block;
                height: 34px;
                border: 1px solid #e4393c;
                line-height: 34px;
                color: #e4393c;
                text-align: center;
            }
            .size-info {
                padding-top: 20px;
                background: #f1f1f5;
            }
            .size-border {
                padding: 10px;
                border-top: 1px solid #c8c7cc;
                border-bottom: 1px solid #c8c7cc;
                background: #fff;
            }
            .pd-tb10 {
                 padding-bottom: 10px;
            }
            .size-border p:first-child {
                color: #333;
            }
            .size-border p:last-child {
                font-size: 14px;
                color: #666;
            }
            .text-f14-c6 {
                font-size: 14px;
                color: #666;
            }
            .bg-border3 {
                display: block;
                height: 2px;
                background: url(../../Content/images/bg_line3.png) 0 0 repeat-x;
                background-size: 6px 1px;
            }
            .size-btn {
                padding: 5px 0 0;
            }
            .tbl-type {
                display: table;
                width: 100%;
            }
            .tbl-cell {
                display: table-cell;
            }
            .size-info .btn-chk, .size-info .btn-update, .size-info .btn-del {
                display: inline-block;
                height: 25px;
                line-height: 25px;
                font-size: 14px;
                color: #666;
            }
            a {
                color: #000;
                text-decoration: none;
            }
            .size-info .btn-chk span, .size-info .btn-update span, .size-info .btn-del span {
                display: inline-block;
                width: 25px;
                height: 25px;
                margin-right: 10px;
                background: url(../../Content/images/icon_order.png) -28px -54px no-repeat;
                background-size: 100px 100px;
                vertical-align: top;
            }
            .text-right {
                 text-align: right;
            }
            .size-info .btn-update span {
                background-position: -50px 0;
            }
            .size-info .btn-del span {
                background-position: -76px 0;
            }
        </style>
     
    </head>
    <body>
        @Html.Partial("_HeaderTypical", new ViewDataDictionary { { "title", "商品尺码" } })
       <slidercontent>
        <div class="err_msg" id="errorMessage" style="display:block;color:red;margin-top:0.5em;margin-left:0.5em"></div>	
        <div class="new-ct">
        <form action="updateOrderAddressTouch.action?sid=9f3728a53baaeb4e297bd8e8364ec88b" method="post" id="addressForm">
    	
    	<div class="size-add">
        	<a href="editSize?type=1" class="btn-size">+添加商品尺码</a>
        </div>    	
    	<div class="err_msg" id="errorMessage" style="display:block;color:red;margin-bottom:0.5em;margin-top:0.5em;"></div>	
        <div class="size-info">
            <div class="size-border">
                    <div class="pd-tb10">
                        <p>aaaa <span>&nbsp; 15910282015</span>  </p>
                        <p class="text-f14-c6">北京大兴区五环至六环之间大兴旧宫镇德茂庄</p>
                    </div>
                    <div class="bg-border3"></div>
                    <div class="size-btn">
                        <span class="tbl-type">
                            <span class="tbl-cell" onclick="selectAddress('137609977')" onmousedown="keyDown(137609977)">
                                <!-- [D] 被选中状态时加 on -->
                                <a href="javascript:void(0)" name="selSpan" id="selSpan137609977" class="btn-chk" style="width:100%"><span></span>送到这里去</a>
                            </span>
                            <span class="tbl-cell text-right">
                                <a href="editSize?type=2" class="btn-update"><span></span>修改</a>
    							<a href='javascript:confirmDel("137609977")' class="btn-del"><span></span>删除</a>
                                <a id="delHref137609977" href="/norder/delAddress.action?addressId=137609977&amp;sid=9f3728a53baaeb4e297bd8e8364ec88b" style="display:none"></a>
    					    </span>
                        </span>
                    </div>
            </div>
       </div>
        	           
        <input type="hidden" name="vtuanOrder" value="false">
        <input type="hidden" id="addressId" name="addressId" value="">
    </form>
</div>

       <script>
    function selectAddress(addressId) {
        $("#addressId").val(addressId);
        spinerShow();
        $("#addressForm").submit();
        spinerHide();
    }
    function confirmDel(id) {
        if (confirm("确定删除吗")) {
            spinerShow();
            $("#delHref" + id).click();
            spinerHide();
        }
    }
    function keyDown(id) {
        $("a[name='selSpan']").removeClass("on");
        $("#selSpan" + id).addClass("on");
    }
    $(document).ready(function () {
        $("#background").css("height", $("#body").css("height")); ;
        if ($("#parent1").text() != "" && $("#parent1").text() != null) {
            $("#backUrl").attr("href", "javascript:backListener('parent1')");
        }
    });
</script>
           
    @Html.Partial("_FooterTypical")
    </body>

</html>
