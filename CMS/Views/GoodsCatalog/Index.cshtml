        var SetSelectData = function (obj) {
            if (obj) {
                $("#txt_id").val(obj.attributes.id);
                $("#txt_code").val(obj.attributes.code);
                $("#txt_Level").val(obj.attributes.level);
                $("#txt_name").val(obj.attributes.name);
